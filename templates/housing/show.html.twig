{% extends 'base.html.twig' %}

{% block title %}Housing{% endblock %}

{% block body %}
    <h1>Housing</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ housing.id }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ housing.price }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ housing.size }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ housing.description }}</td>
            </tr>
            <tr>
                <th>Bed</th>
                <td>{{ housing.bed }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ housing.createdAt ? housing.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ housing.updatedAt ? housing.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_housing_index') }}">back to list</a>

    <a href="{{ path('app_housing_edit', {'id': housing.id}) }}">edit</a>

